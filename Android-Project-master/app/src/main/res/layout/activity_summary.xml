<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:background="#393939"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F4F4F4"
        android:textSize="20dp"
        android:text="Journey Summary"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingBottom="5dp">

    </TextView>
    <TextView
        android:id="@+id/userSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#F4F4F4"
        android:textSize="18dp"
        android:padding="5dp">

    </TextView>

    <TextView
        android:id="@+id/userDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userSpeed"
        android:textColor="#F4F4F4"
        android:textSize="18dp"
        android:padding="5dp">
    </TextView>

    <TextView
        android:id="@+id/userTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userDistance"
        android:textColor="#F4F4F4"
        android:textSize="18dp"
        android:padding="5dp">
    </TextView>





</LinearLayout>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <com.ucdandroidproject.shivamvarunanas.project.GraphView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#393939"
        android:id="@+id/graphLayOut"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>
</LinearLayout>