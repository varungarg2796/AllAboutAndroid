<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context="com.ucdandroidproject.shivamvarunanas.project.MainActivity_screen1">


    <TextView
        android:id="@+id/title"
        android:layout_width="384dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Walk/Run Tracker"
        android:textColor="#F4F4F4"
        android:textSize="35sp"></TextView>


    <Button
        android:id="@+id/btn_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:background="#ED4E19"
        android:text="Stop"
        android:textColor="#393939"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset" />


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:background="#F4F4F4"
        android:text="Reset"
        android:textColor="#393939"
        app:layout_constraintBottom_toTopOf="@+id/btn_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvgSpeed" />


    <TextView
        android:id="@+id/userSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Current Speed"
        android:textColor="#F4F4F4"
        android:textSize="22sp"
        tools:layout_editor_absoluteY="66dp"></TextView>

    <TextView
        android:id="@+id/userAvgSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="133dp"
        android:padding="5dp"
        android:text="Average Speed"
        android:textColor="#F4F4F4"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        app:layout_constraintStart_toStartOf="@+id/userSpeed"
        app:layout_constraintTop_toBottomOf="@+id/userSpeed">></TextView>

    <TextView
        android:id="@+id/userDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:padding="5dp"
        android:text="Distance Traveled"
        android:textColor="#F4F4F4"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/userAvgSpeed"
        app:layout_constraintTop_toTopOf="@+id/userAvgSpeed">></TextView>

    <Chronometer
        android:id="@+id/chronometerTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#3498DB"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#F4F4F4"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="156dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="11dp"
        android:background="#96ED89"
        android:text="Start"
        android:textColor="#393939"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stop" />
</android.support.constraint.ConstraintLayout>

